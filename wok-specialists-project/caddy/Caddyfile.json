{
  "admin": {
    "disabled": true
  },
  "logging": {
    "sink": {
      "writer": {
        "output": "stdout"
      }
    },
    "logs": {
      "default": {
        "level": "INFO"
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "main": {
          "listen": [":80", ":443"],
          "routes": [
            {
              "match": [{"host": ["game.wok.local"]}],
              "handle": [{
                "handler": "reverse_proxy",
                "upstreams": [{"dial": "game-client:80"}]
              }]
            },
            {
              "match": [{"host": ["api.wok.local"]}],
              "handle": [{
                "handler": "reverse_proxy",
                "upstreams": [{"dial": "game-backend:3001"}]
              }]
            },
            {
              "match": [{"host": ["wok.local", "localhost"]}],
              "handle": [{
                "handler": "reverse_proxy",
                "upstreams": [{"dial": "website:80"}]
              }]
            }
          ],
          "tls_connection_policies": [{
            "match": {"sni": ["wok.local", "game.wok.local", "api.wok.local"]},
            "certificate_selection": {
              "any_tag": ["cert0"]
            }
          }]
        }
      }
    },
    "tls": {
      "certificates": {
        "load_files": [{
          "certificate": "/etc/caddy/certs/cert.pem",
          "key": "/etc/caddy/certs/key.pem",
          "tags": ["cert0"]
        }]
      }
    }
  }
}
