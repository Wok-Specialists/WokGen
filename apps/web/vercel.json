{
  "installCommand": "cd $(git rev-parse --show-toplevel) && npm install --legacy-peer-deps --ignore-scripts",
  "buildCommand": "npx prisma generate && next build",
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/automations",
      "schedule": "0 6 * * *"
    }
  ]
}
